generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String      @id @default(cuid())
  name         String
  email        String      @unique
  password     String
  createdAt    DateTime    @default(now())
  moodEntries  MoodEntry[]
}

model MoodEntry {
  id          String       @id @default(cuid())
  user        User         @relation(fields: [userId], references: [id])
  userId      String
  mood        String
  note        String?
  createdAt   DateTime     @default(now())
  emotionTags EmotionTag[] @relation("MoodEntryEmotionTags")
}

model EmotionTag {
  id         String       @id @default(cuid())
  name       String       @unique
  moods      MoodEntry[]  @relation("MoodEntryEmotionTags")
}
